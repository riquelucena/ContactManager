@page
@model DetailsModel
@{
    ViewData["Title"] = "Contact Details";
}

<h1>@Model.Contact.Name</h1>

<div>
    <h4>Contact Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">ID</dt>
        <dd class="col-sm-10">@Model.Contact.ID</dd>
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Contact.Name</dd>
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Contact.PhoneNumber</dd>
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Contact.Email</dd>
    </dl>
</div>

<div>
    <a asp-page="./Edit" asp-route-id="@Model.Contact.ID">Edit</a> |
    <form method="post">
        <button type="submit" asp-page-handler="delete" asp-route-id="@Model.Contact.ID">Delete</button>
    </form>
    <a asp-page="./Index">Back to List</a>
</div>

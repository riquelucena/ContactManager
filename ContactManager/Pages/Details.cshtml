@page
@model DetailsModel
@{
    ViewData["Title"] = "Contact Details";
}

<h1>@ViewData["Title"]</h1>

<form method="get">
    <div class="form-group">
        <label for="contactId">Enter Contact ID:</label>
        <input type="text" class="form-control" id="contactId" name="id" />
    </div>
    <button type="submit" class="btn btn-primary">Search</button>
</form>

@if (Model.Contact != null)
{
    <h2>Contact Details</h2>
    <dl>
        <dt>ID:</dt>
        <dd>@Model.Contact.ID</dd>
        <dt>Name:</dt>
        <dd>@Model.Contact.Name</dd>
        <dt>Phone Number:</dt>
        <dd>@Model.Contact.PhoneNumber</dd>
        <dt>Email:</dt>
        <dd>@Model.Contact.Email</dd>
    </dl>

    <div>
        <a asp-page="./Edit" asp-route-id="@Model.Contact.ID" class="btn btn-primary">Edit</a>
        <form method="post" asp-page-handler="Delete">
            <input type="hidden" name="id" value="@Model.Contact.ID" />
            <button type="submit" class="btn btn-danger">Delete</button>
        </form>
    </div>
}

@if (ModelState.ContainsKey(string.Empty))
{
    <div class="alert alert-danger" role="alert">
        @Html.Raw(ModelState[string.Empty].Errors.First().ErrorMessage)
    </div>
}


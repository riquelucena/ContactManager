@page
@model ContactManager.Pages.IndexModel
@{
    ViewData["Title"] = "Contact Index";
    Layout = "_Layout";
}

<h1>Contact Index</h1>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Email</th>
            <!-- Adicione outras colunas conforme necessário -->
        </tr>
    </thead>
    <tbody>
        @foreach (var contact in Model.Contacts)
        {
            <tr>
                <td>@contact.ID</td>
                <td>@contact.Name</td>
                <td>@contact.Email</td>
                <!-- Adicione outras colunas conforme necessário -->
            </tr>
        }
    </tbody>
</table>

